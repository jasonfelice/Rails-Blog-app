<section class="user_details">
  <div class="user_wrapper">
  <a href="<%= @user.photo %>">Photo</a>
  <div class="user_info">
    <h2><%= @user.name %></h2>
    <span>
    Number of posts:
    <%= @user.posts_counter%>
    <% if @user.posts_counter.nil?%>
    <%= "0" %>
    <%end%>
    </span>
  </div>
</div>
  <div class="user_bio">
    <span>Bio:</span>
    <p><%= @user.bio %></p>
  </div>
  <% @user.recent_posts.each do |post| %>
    <div class="post_wrapper">
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <div class="post_info">
        <span>Comments: <%= post.comments_counter %></span>
        <span>Likes: <%= post.likes_counter %></span>
      </div>
    </div>
  <%end%>
  <%= link_to "See all posts", user_posts_path(@user), class:"see_all" %>
</section>