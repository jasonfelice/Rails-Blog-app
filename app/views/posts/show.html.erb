<section class="post_details">
  <div class="post">
    <div class="post_heading">
      <span><%= @post.title %> by <%= @post.author.name %></span>
      <%= form_with url: "/posts/#{@post.id}/likes", scope: :like do |f| %>
        <%= f.submit "Like" %>
      <%end%>
       <div class="post_info">
        <span>Comments: <%= @post.comments_counter %></span>
        <span>Likes: <%= @post.likes_counter %></span>
      </div>
    </div>
    <div class="post_content">
      <p> <%= @post.text %> </p>
    </div>
  </div>
  <div class="post_comments">
    <% @post.comments.each do |comment| %>
      <span><%= comment.author.name %>: <%= comment.text %></span>
    <%end%>
  </div>
  <div class="add_comment">
    <%= form_with url: "/posts/#{@post.id}/comments", scope: :comment do |f| %>
      <div class="comment_field">
        <%= f.text_area :text, placeholder: "Type your comment", required: true %>
      </div>
      <%= f.submit "Post" %>
    <%end%>
  </div>
</section>